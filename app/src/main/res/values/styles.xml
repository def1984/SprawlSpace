<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/theme_primary_light</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/theme_primary_light</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- SearchView -->
        <item name="android:textColorPrimary">@color/body_text_2</item>

    </style>

    <style name="AppTheme" parent="@style/AppBaseTheme"></style>

    <style name="MainAtyTheme" parent="@style/AppBaseTheme">
    </style>

    <style name="SearchTheme" parent="@style/AppBaseTheme">
        <item name="android:textViewStyle">@style/SearchEditView</item>
    </style>
    
    <style name="SearchEditView">
        <item name="android:textColorHint">@color/gray_background</item>
    </style>

    <style name="InterTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>
</resources>  
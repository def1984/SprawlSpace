<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarDivider">@null</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:colorForeground">@color/bright_foreground_material_light</item>
        <item name="android:textColor">@color/bright_foreground_material_light</item>

    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <!-- Support library compatibility -->
        <item name="background">@android:color/holo_blue_dark</item>
        <item name="homeAsUpIndicator">@drawable/abc_ic_menu_copy_mtrl_am_alpha</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="actionOverflowButtonStyle">@style/Base.Widget.AppCompat.ActionButton.Overflow</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>  
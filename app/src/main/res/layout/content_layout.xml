<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/post_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ListView>

    <LinearLayout
        android:layout_gravity="bottom|right"
        android:layout_width="60dp"
        android:id="@+id/mini_fab_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="82dp"
        android:layout_height="wrap_content">

        <com.melnykov.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_up"
            android:layout_margin="16dp"
            fab:fab_type="mini"
            android:visibility="gone"
            fab:fab_colorNormal="@color/avoscloud_feedback_white"
            fab:fab_colorPressed="@color/theme_primary_light"
            fab:fab_colorRipple="@color/theme_primary_dark"  />

        <com.melnykov.fab.FloatingActionButton
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_up"
            android:layout_margin="16dp"
            fab:fab_type="mini"
            fab:fab_colorNormal="@color/avoscloud_feedback_white"
            fab:fab_colorPressed="@color/theme_primary_light"
            fab:fab_colorRipple="@color/theme_primary_dark"  />

        </LinearLayout>

         <com.example.ai.babel.ui.widget.MyFloatingActionButton
             android:id="@+id/fab"
             android:layout_width="@dimen/fab_size"
             android:layout_height="@dimen/fab_size"
             android:layout_margin="16dp"
             android:layout_gravity="bottom|right">

             <ImageView
                 android:id="@+id/img_fab"
                 android:layout_width="@dimen/fab_icon_size"
                 android:layout_height="@dimen/fab_icon_size"
                 android:src="@drawable/ic_add"
                 android:layout_gravity="center"
                 android:duplicateParentState="true"/>
            </com.example.ai.babel.ui.widget.MyFloatingActionButton>
</FrameLayout>
